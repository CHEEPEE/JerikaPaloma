<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splas_bakcground"
    android:theme="@style/MyActionBar"
    tools:context="jerika.com.sacbookstore.splash">
    <ImageView
        android:layout_width="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:layout_height="150dp"
        android:id="@+id/icon_splash"
        android:src="@drawable/icon_flash"
        />
    <TextView
        android:layout_below="@+id/icon_splash"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/splash_title"
        android:textAlignment="center"

        android:text="SAC BOOK \nSTORE"
        android:textSize="30dp"
        android:textStyle="bold"

        android:textColor="@color/white"
        />



</RelativeLayout>
