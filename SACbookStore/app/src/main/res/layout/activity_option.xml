<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="jerika.com.sacbookstore.OptionActivity">


        <ScrollView
            android:layout_width="match_parent"
            android:scrollbars="none"
            android:layout_height="match_parent"
            android:paddingBottom="20dp"
            >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                        <include layout="@layout/option_item_school_supplies"/>
                        <include layout="@layout/option_item_pe_uniform"/>
                        <include layout="@layout/option_item_school_uniform"/>
                        <include layout="@layout/option_item_pe_nursing_uniform_accessories"/>
                        <include layout="@layout/option_item_cirminology"/>
                        <include layout="@layout/option_item_books_and_manuals"/>
                        <include layout="@layout/option_item_others"/>
                </LinearLayout>
        </ScrollView>


</LinearLayout>
